<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#42BEE8" />
            <stroke
                android:width="1dp"
                android:color="#42BEE8" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="0dp"
                android:top="1dp"
                android:right="5dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#42BEE8"
                android:endColor="#42BEE8"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#42BEE8" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="0dp"
                android:top="1dp"
                android:right="5dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>