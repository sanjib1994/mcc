<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/parent_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/list_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp" >

            <RelativeLayout
                android:id="@+id/hour_layout"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <TextView
                    android:id="@+id/list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="M 8/78"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/star_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/list_time"
                    android:layout_centerHorizontal="true"
                     android:visibility="visible"
                    android:src="@mipmap/favorite_icon" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/hour_layout"
                android:background="#0aafb6" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/view_6" 
            android:layout_toRightOf="@+id/list_time_layout">

            
           
                
                 <TextView
                    android:id="@+id/list_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:text="120/80 mm Hg - 3:25 pm"
                    android:textColor="@color/black" />
                
           
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:layout_below="@+id/parent_view"
        android:background="#0aafb6" />
</RelativeLayout>